<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button android:id="@+id/btn_play" android:text="Play" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <Button android:id="@+id/btn_devices" android:text="Show Devices" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <Button android:id="@+id/btn_instructions" android:text="Sharing Instructions" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/tv_devices" android:layout_width="match_parent" android:layout_height="wrap_content" />
</LinearLayout>
